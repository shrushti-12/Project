<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Admin Dashboard</h1>
    <img src="/logo.jpeg" alt="Logo" style="width: 100px; height: auto;">
    
    <h2>Add User Details</h2>
    <form action="/admin/add-user" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" required>
        <br>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
        <br>
        <label for="caseDetail">Case:</label>
        <input type="text" id="caseDetail" name="caseDetail" required>
        <br>
        <label for="compensationAmount">Compensation Amount:</label>
        <input type="number" id="compensationAmount" name="compensationAmount" required>
        <br>
        <label for="referrals">Referrals:</label>
        <input type="text" id="referrals" name="referrals">
        <br>
        <label for="message">Message:</label>
        <input type="text" id="message" name="message" required>
        <br>
        <button type="submit">Add User</button>
    </form>

    <h2>Update Message for User</h2>
    <form action="/admin/update-message" method="POST">
        <label for="userPhone">User Phone Number:</label>
        <input type="tel" id="userPhone" name="phone" required>
        <br>
        <label for="newMessage">New Message:</label>
        <input type="text" id="newMessage" name="message" required>
        <br>
        <button type="submit">Update Message</button>
    </form>

    <h2>Existing Users</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Message</th>
        </tr>
        <% users.forEach(user => { %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.message %></td>
        </tr>
        <% }); %>
    </table>
</body>
</html>